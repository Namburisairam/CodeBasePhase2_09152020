@model IEnumerable<EventManagement.DataAccess.DataBase.Model.Attende>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Script{
    <script>
          $(document).ready(function () {
            $('#attendeeDataTable').dataTable({
                "stateSave": true,
                "bDestroy": true
            });
        });
        </script>
    }
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="row topbar">
            <div class="col-md-10">
                <h2>All Attendees</h2>
            </div>
            <div class="col-md-2">
                <a class="btn btn-primary" style="width:100%" href='@Url.Action("Create")'>Create New</a>
            </div>
            @*<div class="col-md-2">
                    <text class="btn btn-primary button">@Html.ActionLink("Approve Profile Pictures", "Pictures")</text>
                </div>*@
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row spaceing">

            <div class="box box-primary">
                @*<div class="box-header with-border">*@
                <table class="table box box-primary" id="attendeeDataTable">
                    <thead>
                        <tr>
                            <th style="cursor:pointer">
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th style="cursor:pointer">
                                @Html.DisplayNameFor(model => model.Lastname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Thumbnail)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.FacebookURL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TwitterURL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InstagramURL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AddedON)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AddedBY)
                                </th>*@
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>*@
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lastname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>*@
                                <td>
                                    <img height="50" width="50" src="@MvcCustom.ImagePath(item.Thumbnail)" />
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.FacebookURL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TwitterURL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InstagramURL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddedON)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddedBY)
                                    </td>*@
                                @*<td>

                                        @if (item.Status  != true) {
                                       <span>InActive</span>
                                        }
                                        else
                                        {
                                             <span>Active</span>
                                        }
                                    </td>*@
                                <td class="textColor">
                                    <a class="btn btn-warning" href='@Url.Action("Create", new { id = item.ID })'>Edit</a>
                                    <text> </text>
                                    <a class="btn btn-info" href='@Url.Action("Details", new { id = item.ID })'>Details</a>
                                    <text> </text>
                                    <a class="btn btn-warning" href='@Url.Action("DeleteAttendee", new { id = item.ID })' onclick="return confirm('Are you sure you want to delete this item?. All the content will be deleted');">Delete</a>
                                    <text> </text>
                                    <a class="btn btn-warning" href='@Url.Action("DeletePic", new { id = item.ID })' onclick="return confirm('Are you sure you want to delete this item?. All the content will be deleted');">Remove Picture</a>
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </section>
</div>